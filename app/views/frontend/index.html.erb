<div class="container">
  <div class="row">
    <div class="owl-carousel">
      <% 12.times do |i| %>
          <div>
            <img src="http://placehold.it/1140x300" class="img-responsive center-block">
          </div>
      <% end %>
    </div>

    <div class="col-xs-12 col-sm-8">
      <header>
        <h3 class="cabecera">Últimas publicaciones</h3>
      </header>
      <div class="row">
        <div class="col-xs-12">
          <% @ultimas_publicaciones.each do |i| %>
              <div class="content-novedades">
                <a href="<%= publicacion_detalle_path(i.url) %>">
                  <header>
                    <div class="row">
                      <div class="col-xs-12">
                        <h4><%= i.nombre %></h4>
                      </div>
                      <div class="col-xs-6">
                        <i class="fa fa-calendar iconos-novedades"></i><%= i.fecha_creacion.strftime("%d/%m/%Y") %>
                      </div>
                      <div class="col-xs-6">
                        <i class="fa fa-comments iconos-novedades"></i>Comentarios
                      </div>
                    </div>
                  </header>
                  <%= image_tag i.image.url(:home), class: 'center-block img-responsive' %>
                  <p class="descripcion-novedad"><%= i.descripcion_corta %></p>
                </a>
              </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-4">
      <%= render partial: 'frontend/categorias' %>
    </div>
  </div>
</div>